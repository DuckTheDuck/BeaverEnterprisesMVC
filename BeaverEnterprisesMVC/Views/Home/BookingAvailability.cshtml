@model List<BeaverEnterprisesMVC.Models.Flight>
@{
    ViewData["Title"] = "BookingAvailability Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Availability</title>
    <link rel="stylesheet" href="styles.css"> <!-- Arquivo CSS externo -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

    <div class="centerBookingHeaad">
        <div class="herov2">
            <div class="navbarcustom">
                <a href="@Url.Action("Index", "Home")" class="airline-do-Simao">Airline</a>
                <div class="leftnavbarcustom">
                    <div class="navitem"><a href="@Url.Action("Regsister", "Home")"><i class="fas fa-user-circle"></i> Login & Registration</a></div>
                    <div class="navitem"><a href="@Url.Action("BookingAvailability", "Home")">Book</a></div>
                    <div class="navitem"><a href="@Url.Action("CheckIn", "Home")">Check-In</a></div>
                    <div class="navitem"><a href="#">Contact</a></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modify-section">
        <div class=" centerBookingHeaad">
            <form id="departurebookingForm" action="/Home/BookingAvailability" method="post" onsubmit="return validateFormModify()">
                <div class="search-box">
                    <h2>Find Your Flight</h2>

                    <div class="margin">
                        <div class="divider">
                            <label for="book-departure">Origem</label>
                            <input type="text" class="form-control" name="Origin" id="book-airport-input-Origin" placeholder="Origin" value="@ViewBag.Origin">
                            <div class="suggestions">
                                @await Html.PartialAsync("_AirportsSuggestionsOrigin")
                            </div>
                        </div>

                        <div class="divider">
                            <label for="book-departure">Destino</label>
                            <input type="text" class="form-control" name="Destination" id="book-airport-input-Destination" placeholder="Destination" value="@ViewBag.Destination">
                            <div class="suggestions">
                                @await Html.PartialAsync("_AirportsSuggestionsDestination")
                            </div>
                        </div>

                        <div class="divider">
                            <label for="book-departure">Partida</label>
                            <input type="date" class="form-control" name="Departure" id="book-departure" value="@ViewBag.Departure">
                        </div>

                        <div class="divider">
                            <label for="book-arrival">Chegada</label>
                            <input type="date" class="form-control" name="Arrival" id="book-arrival" value="@ViewBag.Arrival">
                        </div>

                        <div class="divider">
                            <label for="book-passengers">Passageiros</label>
                            <input type="number" class="form-control" name="Passengers" id="book-passengers" min="1" value="@ViewBag.Passengers">
                        </div>
                        <input type="submit" class="bttpesquisar" value="Pesquisar" id="book-bttbooking">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="centerBttBookingHead">
        <button class="btn-modify-booking" onclick="toggleModify()">
            <i id="modify-icon" class="fas fa-chevron-down"></i> Modify
        </button>
    </div>

    <div class="container mt-4">
        <h3>Available Flights</h3>
        @if (Model.Count == 0)
        {
            <div class="alert alert-warning" role="alert">
                Nenhum voo encontrado para os critérios selecionados.
            </div>
        }
        else
        {
            @foreach (var flight in Model)
            {
                <div class="flight-card">
                    <div class="flight-header">
                        <div>
                            <div class="flight-time">@flight.DepartureTime</div>
                            <div class="text-muted">@flight.IdOriginNavigation.Name - Terminal 1</div>
                        </div>
                        <div>
                            <div class="flight-duration">Duration</div>
                            <div class="text-muted">6h 45m</div>
                        </div>
                        <div>
                            <div class="flight-time">@flight.ArrivalTime</div>
                            <div class="text-muted">@flight.IdDestinationNavigation.Name - Terminal 1</div>
                        </div>
                        <div class="flight-airline">
                            ✈ Operated by @flight.IdAircraftNavigation.Model
                        </div>
                        <div class="d-flex">
                            @foreach (var classItem in ViewBag.Classes)
                            {
                                <div class="price-box economy" onclick="selectClass(this, '@classItem.Name')">
                                    <p>@classItem.Name</p>
                                    <h4>€@classItem.Price</h4>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>


    <div class="container text-end mt-4">
        <button class="btn-primary-booking-search" onclick="confirmSelection()">Select</button>
    </div>

    <footer class="footer text-center">
        <p>&copy; 2025 Airline. All Rights Reserved.</p>
    </footer>
    <script>
        function selectClass(element) {
            // Se o elemento já estiver selecionado, desseleciona e sai
            if (element.classList.contains('selected')) {
                element.classList.remove('selected');
                return;
            }

            // Remove a classe "selected" de todas as opções em todos os voos
            document.querySelectorAll('.price-box').forEach(opt => opt.classList.remove('selected'));

            // Adiciona a classe "selected" apenas ao elemento clicado
            element.classList.add('selected');
        }
                        function confirmSelection() {
            let selected = document.querySelector('.price-box.selected');
            if (!selected) {
                alert("Por favor, seleciona uma classe antes de continuar!");
                return;
            }

            // Pegando valores dos inputs
            let origin = document.getElementById('book-airport-input-Origin').value;
            let destination = document.getElementById('book-airport-input-Destination').value;
            let departure = document.getElementById('book-departure').value;
            let arrival = document.getElementById('book-arrival').value;
            let passengers = document.getElementById('book-passengers').value;

            // Pegando a classe selecionada
            let selectedClass = selected.querySelector('p').innerText.trim();

            // Criando a URL com parâmetros
            let url = `@Url.Action("BookingAvailabilityReturn", "Home")?Origin=${encodeURIComponent(origin)}&Destination=${encodeURIComponent(destination)}&Departure=${encodeURIComponent(departure)}&Arrival=${encodeURIComponent(arrival)}&Passengers=${encodeURIComponent(passengers)}&Class=${encodeURIComponent(selectedClass)}`;

            // Redirecionando para a nova página
            window.location.href = url;
        }

        function toggleModify() {
            let section = document.querySelector(".modify-section");
            let icon = document.getElementById("modify-icon");

            if (section.classList.contains("show")) {
                section.classList.remove("show");
                setTimeout(() => {
                    section.style.display = "none";
                }, 400);
            } else {
                section.style.display = "block";
                setTimeout(() => {
                    section.classList.add("show");
                }, 10);
            }

            // Alterna a classe rotate sempre que o botão for clicado
            icon.classList.toggle("rotate");
        }
    </script>
    <style>

        .image-Simao-Booking {
            background-image: url('/images/aurora castor.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            border-radius: 60px;
            overflow: hidden;
            margin: 50px;
            position: relative;
            height: 600px;
        }

        .airline-do-Simao {
            font-size: 24px;
            font-weight: bold;
            color: rgb(130, 89, 46);
            align-content: center;
        }

        .modify-section {
            display: none;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.4s ease-in-out, transform 0.4s ease-in-out;
            padding: 15px;
            background: #fff;
            border-radius: 10px;
            position: relative;
        }

            .modify-section.show {
                display: block;
                opacity: 1;
                transform: translateY(0);
            }

        .modify-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: bold;
            transition: background 0.3s, transform 0.2s;
        }

            .modify-btn:hover {
                background: #ffcc00;
                transform: scale(1.05);
            }

        #modify-icon {
            transition: transform 0.3s ease-in-out;
        }

        .rotate {
            transform: rotate(180deg);
        }

        .navbarcustombooking {
            display: flex;
            background: rgba(255, 255, 255, 0.7); /* Cor com opacidade */
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            color: rgb(130, 89, 46);
            width: 100%;
            max-width: 1250px;
            position: relative;
            margin-top: 1%
        }

        .centerBookingHeaad {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 20vh;
            width: 100%;
        }

        .centerBttBookingHead {
            display: flex;
            justify-content: center; /* Centraliza horizontalmente */
            align-items: center; /* Centraliza verticalmente */
            height: 10vh; /* Define a altura da tela toda */
            color: rgb(130, 89, 46);
        }

        .btn-modify-booking {
            justify-content: center;
            align-items: center;
            background-color: rgb(130, 89, 46);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-primary-booking-search {
            background-color: rgb(130, 89, 46);
            color: white;
            border: none;
            padding: 10px 20px;
            margin-bottom: 10px;
            font-size: 1.1rem;
        }
    </style>
</body>
</html>
