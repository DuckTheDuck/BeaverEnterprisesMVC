@{
    ViewData["Title"] = "BookingAvailability Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Availability</title>
    <link rel="stylesheet" href="styles.css"> <!-- Arquivo CSS externo -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <div class="flight-card">
            <div class="flight-header">
                <div>
                    <div class="flight-time">19:55</div>
                    <div class="text-muted">LIS - Terminal 1</div>
                </div>
                <div>
                    <div class="flight-duration">6h 45m BRU</div>
                    <div class="text-muted">Duration: 10h 35m</div>
                </div>
                <div>
                    <div class="flight-time">07:30 +1 day</div>
                    <div class="text-muted">CDG - Terminal 1</div>
                </div>
                <div class="flight-airline">
                    ✈ Operated by TAP Air Portugal, Brussels Airlines
                </div>
                <div class="d-flex">
                    <div class="price-box economy" onclick="selectClass(this, 'economy')">
                        <p>Economy</p>
                        <h4>€581.02</h4>
                    </div>
                    <div class="price-box business disabled">
                        <p>Business</p>
                        <h4>Not Available</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="flight-card">
            <div class="flight-header">
                <div>
                    <div class="flight-time">19:55 ➝ 09:15 (+1 day)</div>
                    <div class="flight-duration">Duration: 12h 20m (Stop: BRU)</div>
                    <div class="flight-airline">Operated by TAP Air Portugal, Brussels Airlines</div>
                </div>
                <div class="d-flex">
                    <div class="price-box economy" onclick="selectClass(this, 'economy')">
                        <p>Economy</p>
                        <h4>€581.02</h4>
                    </div>
                    <div class="price-box business disabled" style="color: #ccc;">
                        <p>Business</p>
                        <h4>Not Available</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer text-center">
        <p>&copy; 2025 Airline. All Rights Reserved.</p>
    </footer>
    <script>
        function selectClass(element, classType) {
            let parent = element.closest('.flight-card');
            let options = parent.querySelectorAll('.price-box');
            options.forEach(opt => opt.classList.remove('selected'));
            element.classList.add('selected');
        }
    </script>
</body>
</html>
