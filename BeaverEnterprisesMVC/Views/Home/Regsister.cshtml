<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Login and Signup Form</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css">
    <!-- Boxicons CSS -->
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">


</head>
<body>

    <div class="image-Gabriel-Register">
        <!-- Hero Section -->
        <div class="herov2">
            <div class="navbarcustom">
                <a href="#" class="airline">Airline</a>
                <div class="leftnavbarcustom">
                    <div class="navitem"><a href="@Url.Action("Regsister", "Home")"><i class="fas fa-user-circle"></i> Login & Registration</a></div>
                    <div class="navitem"><a href="@Url.Action("BookingAvailability", "Home")">Book</a></div>
                    <div class="navitem"><a href="@Url.Action("CheckIn", "Home")">Check-In</a></div>
                    <div class="navitem"><a href="#">Contact</a></div>                  
                </div>              
            </div>
        </div>

        <div class="Login-mid-button">
            <a href="#" class="cta-button active" onclick="changeViewLogin(event, '_Login')">Login</a>
            <a href="#" class="cta-button" onclick="changeViewLogin(event, '_Register')">Register</a>
        </div>
       
                          
        <div style="margin-top: 20px;">
            <div id="shared-view">
              
            </div>                  
        </div>
      
    </div>

    <!-- Signup Form -->
   

    @await Html.PartialAsync("_Footer")



    <!-- JavaScript -->
    <script src="~/js/site.js"></script>
    <style>
        .herov3{
            background: url('https://source.unsplash.com/1600x900/?airplane,airport') center/cover;
            display: flex;
            align-items: flex-end; /* Alinha o conteúdo da hero ao fundo */
            justify-content: center;
            text-align: center;
            color: rgb(130, 89, 46);
            position: absolute; /* Faz com que a hero se posicione dentro da .image */
            bottom: 0; /* Posiciona a hero na parte inferior da .image */
            width: 100%; /* Garante que a hero ocupe toda a largura da imagem */
            margin-bottom: 50px; /* Garante que a hero ocupe toda a largura da imagem */ /* Remove o margin-bottom, pois a hero já está posicionada */
        }

        .image-Gabriel-Register {
            background-image: url('/images/CastorRioDeJaneiro.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            border-radius: 60px;
            overflow: hidden;
            margin: 50px;
            position: relative;
            height: 600px;
        }

    </style>
</body>
</html>
