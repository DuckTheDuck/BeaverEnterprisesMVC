@{
    ViewData["Title"] = "Home Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airline Homepage</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"> 
    <script src="~/site.js/airport-autocomplete.js"></script>

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Airline</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link login-btn" href="@Url.Action("LoginRegister", "Account")">
                            <i class="fas fa-user-circle"></i> Login & Registration
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("BookingAvailability", "Home")">Book</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("CheckIn", "Home")">Check-In</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="image">
        <!-- Hero Section -->
        <div class="navbarcustom">
            <a href="#" class="airline">Airline</a>
            <div class="leftnavbarcustom">
                <div class="navitem"><a class="nav-link" href="@Url.Action("LoginRegister", "Account")"> Login & Registration</a></div>
                <div class="navitem"><a class="nav-link" href="@Url.Action("BookingAvailability", "Home")">Book</a></div>
                <div class="navitem"><a class="nav-link" href="@Url.Action("CheckIn", "Home")">Check-In</a></div>
                <div class="navitem"><a class="nav-link" href="#">Contact</a></div>
            </div>
        </div>
        <div class="hero">

            @await Html.PartialAsync("_MainLayout")
        </div>
    </div>
    <!-- Promotions -->
    <div class="container mt-5">
        <h3>Special Offers</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/400x300/?travel" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Europe Getaway</h5>
                        <p class="card-text">Fly to Europe at great prices!</p>
                        <a href="#" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/400x300/?beach" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Tropical Escape</h5>
                        <p class="card-text">Enjoy sunny beaches this season.</p>
                        <a href="#" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/400x300/?city" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">City Adventures</h5>
                        <p class="card-text">Explore vibrant cities worldwide.</p>
                        <a href="#" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_Footer")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
