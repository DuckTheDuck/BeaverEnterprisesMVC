﻿@{
    ViewData["Title"] = "Home Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airline Homepage</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <script src="~/site.js/airport-autocomplete.js"></script>

</head>
<body>


    <div class="image">
        <!-- Hero Section -->
        <div class="herov2">
            <div class="navbarcustom">
                <a href="#" class="airline">Airline</a>
                <div class="leftnavbarcustom">
                    <div class="navitem"><a href="@Url.Action("LoginRegister", "Account")"><i class="fas fa-user-circle"></i> Login & Registration</a></div>
                    <div class="navitem"><a  href="@Url.Action("BookingAvailability", "Home")">Book</a></div>
                    <div class="navitem"><a  href="@Url.Action("CheckIn", "Home")">Check-In</a></div>
                    <div class="navitem"><a  href="#">Contact</a></div>
                </div>
            </div>
        </div>
        <div class="hero">

            @await Html.PartialAsync("_MainLayout")
        </div>
    </div>
    <!-- Promotions -->

    @await Html.PartialAsync("_Footer")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
