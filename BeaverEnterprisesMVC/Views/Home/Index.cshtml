@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airline Homepage</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"> 
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Airline</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Book</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Offers</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero">
        <div class="search-box">
            <h2>Find Your Flight</h2>
            <form>
                <div class="row">
                    <div class="col-md-4">
                        <label>From</label>
                        <input type="text" class="form-control" placeholder="Origin">
                    </div>
                    <div class="col-md-4">
                        <label>To</label>
                        <input type="text" class="form-control" placeholder="Destination">
                    </div>
                    <div class="col-md-4">
                        <label>Departure Date</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label>Arrival Date</label>
                        <input type="date" class="form-control">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Search</button>
            </form>
        </div>
    </div>

    <!-- Promotions -->
    <div class="container mt-5">
        <h3>Special Offers</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/400x300/?travel" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Europe Getaway</h5>
                        <p class="card-text">Fly to Europe at great prices!</p>
                        <a href="#" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/400x300/?beach" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Tropical Escape</h5>
                        <p class="card-text">Enjoy sunny beaches this season.</p>
                        <a href="#" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/400x300/?city" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">City Adventures</h5>
                        <p class="card-text">Explore vibrant cities worldwide.</p>
                        <a href="#" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer text-center">
        <p>&copy; 2025 Airline. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
