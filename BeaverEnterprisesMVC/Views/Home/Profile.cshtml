<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Login and Signup Form</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>
<body>

    <div class="image-Gabriel-Register">
        <!-- Hero Section -->
        <div class="herov2">
            <div class="navbarcustom">
                <a href="#" class="airline">Airline</a>
                <div class="leftnavbarcustom">
                    
                    <div class="navitem"><a href="@Url.Action("BookingAvailability", "Home")">Book</a></div>
                    <div class="navitem"><a href="@Url.Action("CheckIn", "Home")">Check-In</a></div>
                    <div class="navitem"><a href="#">Contact</a></div>
                </div>
            </div>
        </div>

        <!-- User Profile -->
        <div style="margin-top: 20px;">
            <div class="centered-form-Gabriel-Login">
                <div class="form-Gabriel-Login login-Gabriel-Login">
                    <div class="form-content-Gabriel-Login">
                        <h2>User Profile</h2>
                        <label for="first-name" class="form-label">Email: </label>
                        <span>@ViewBag.User.Email</span>
                        <br />
                        <label for="first-name" class="form-label">Code:  </label>
                        <span>@ViewBag.User.Code</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Signup Form -->
    @await Html.PartialAsync("_Footer")

    <!-- JavaScript -->
    <script src="~/js/site.js"></script>

   

    <style>
        .herov3 {
            background: url('https://source.unsplash.com/1600x900/?airplane,airport') center/cover;
            display: flex;
            align-items: flex-end;
            justify-content: center;
            text-align: center;
            color: rgb(130, 89, 46);
            position: absolute;
            bottom: 0;
            width: 100%;
            margin-bottom: 50px;
        }

        .image-Gabriel-Register {
            background-image: url('/images/CastorRioDeJaneiro.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            border-radius: 60px;
            overflow: hidden;
            margin: 50px;
            position: relative;
            height: 600px;
        }
    </style>

</body>
</html>
